<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/expressionListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpressionPublisherFragment">

    <LinearLayout
        style="@style/expressionListFragmentSearchViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/expressionListSearchView"
            style="@style/expressionListSearchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:queryHint="jhg" />

            <ListView
                style="@style/expressionListFragmentListView"
                android:id="@+id/expressionListListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>
