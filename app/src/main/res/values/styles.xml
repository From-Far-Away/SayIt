<resources>

    <!-- Start of styles for the application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- End of styles for the application Theme -->

    <!-- ******************* -->

    <!-- Start of styles for publish fragment -->
    <style name="expressionPublishFragmentParentLayout">
        <item name="android:padding">16dp</item>
    </style>

    <style name="expressionToTranslate">
        <item name="android:background">@drawable/text_field</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="langageField">
    </style>

    <style name="publishButton">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/FontLight</item>
        <item name="android:background">@drawable/button_publish_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>
    <!-- End of styles for publish fragment -->

    <!-- ******************* -->

    <!-- Start of styles for expression list fragment -->
    <style name="expressionListFragment"></style>

    <style name="expressionListFragmentSearchViewLayout">
        <item name="android:background">@color/BackgroundLight</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="expressionListSearchView">
        <item name="android:background">@color/BackgroundLight</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="expressionListFragmentListView">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/expression_list_view</item>
    </style>
    <!-- End of styles for expression list fragment -->

    <!-- ******************* -->

    <!-- Start of styles for item_expression_list.xml -->
    <style name="expressionListItem">
        <item name="android:padding">10dp</item>
    </style>

    <style name="expressionListTextViewItem">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="expressionListImageViewItem">
        <item name="android:padding">10dp</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />
    <!-- End of styles for item_expression_list.xml -->

</resources>
